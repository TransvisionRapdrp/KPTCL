<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/dp8"
        android:layout_margin="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="4">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="1.4"
                    android:fontFamily="@font/poppinsbold"
                    android:paddingLeft="15dp"
                    android:text="Scheduled"
                    android:textColor="@color/outagetextcolor"
                    android:textSize="15sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/padding_10"
                android:orientation="horizontal"
                android:weightSum="4">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="1.4"
                    android:text="Town"
                    android:textAlignment="textStart"
                    android:textSize="@dimen/sp15"
                    android:fontFamily="@font/poppinsmedium"
                    tools:ignore="RtlCompat" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1.8"
                    android:text=":"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp15" />


                <TextView
                    android:id="@+id/tv_town"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight=".8"
                    android:text="Kumta"
                    android:fontFamily="@font/poppinsmedium"
                    android:textAlignment="viewStart"
                    android:textColor="@color/outagetextcolor"
                    android:textSize="@dimen/sp15" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="4">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1.4"
                    android:gravity="center"
                    android:text="Sub Station"
                    android:textAlignment="textStart"
                    android:fontFamily="@font/poppinsmedium"
                    android:textSize="@dimen/sp15"
                    tools:ignore="RtlCompat" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1.8"
                    android:gravity="center"
                    android:text=":"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp15" />


                <TextView
                    android:id="@+id/tv_powerhouse"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight=".8"
                    android:gravity="center"
                    android:fontFamily="@font/poppinsmedium"
                    android:text="KUMTA_110KV"
                    android:textAlignment="viewStart"
                    android:textColor="@color/outagetextcolor"
                    android:textSize="@dimen/sp15"
                    tools:ignore="RtlCompat" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="4">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="1.4"
                    android:text="Feeder Name"
                    android:textAlignment="textStart"
                    android:textSize="@dimen/sp15"
                    android:fontFamily="@font/poppinsmedium"
                    tools:ignore="RtlCompat" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1.8"
                    android:text=":"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp15" />


                <TextView
                    android:id="@+id/tv_OutageFeeder"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight=".8"
                    android:fontFamily="@font/poppinsmedium"
                    android:text="F02-VALAGALLI"
                    android:textAlignment="viewStart"
                    android:textColor="@color/outagetextcolor"
                    android:textSize="@dimen/sp15" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:orientation="vertical"
                android:weightSum="4">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1.4"
                    android:gravity="top"
                    android:text="Area Affected"
                    android:fontFamily="@font/poppinsmedium"
                    android:textAlignment="textStart"
                    android:textSize="@dimen/sp15"
                    tools:ignore="RtlCompat" />


                <TextView
                    android:id="@+id/tv_OutageArea"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight=".8"
                    android:gravity="center"
                    android:fontFamily="@font/poppinsmedium"
                    android:text="Dhareshwar,handigon,harneer,Harodi,Hegale,Horbag,Kadekodi,Kalkeri,Konalli,Kujalli,Math,Talagod,Urkeri,Valagalli,Holegadde,Kundaguni,Betgeri,Gore."
                    android:textAlignment="viewStart"
                    android:textColor="@color/outagetextcolor"
                    android:textSize="@dimen/sp15"
                    tools:ignore="RtlCompat" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="4">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1.4"
                    android:gravity="center"
                    android:text="From"
                    android:textAlignment="textStart"
                    android:fontFamily="@font/poppinsmedium"
                    android:textSize="@dimen/sp15"
                    tools:ignore="RtlCompat" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1.8"
                    android:gravity="center"
                    android:text=":"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp15" />


                <TextView
                    android:id="@+id/tv_OutageFrom"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight=".8"
                    android:gravity="center"
                    android:fontFamily="@font/poppinsmedium"
                    android:text="06-03-2021 11.15AM"
                    android:textAlignment="viewStart"
                    android:textColor="@color/outagetextcolor"
                    android:textSize="@dimen/sp15"
                    tools:ignore="RtlCompat" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:orientation="horizontal"
                android:weightSum="4">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1.4"
                    android:gravity="center"
                    android:text="TO"
                    android:fontFamily="@font/poppinsmedium"
                    android:textAlignment="textStart"
                    android:textSize="@dimen/sp15"
                    tools:ignore="RtlCompat" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1.8"
                    android:gravity="center"
                    android:text=":"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp15" />

                <TextView
                    android:id="@+id/tv_OutageTo"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight=".8"
                    android:gravity="center"
                    android:fontFamily="@font/poppinsmedium"
                    android:text="06-03-2021 11.15AM"
                    android:textAlignment="viewStart"
                    android:textColor="@color/outagetextcolor"
                    android:textSize="@dimen/sp15"
                    tools:ignore="RtlCompat" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:orientation="vertical"
                android:weightSum="4">

               <!-- <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1.4"
                    android:gravity="top"
                    android:text="Reason"
                    android:fontFamily="@font/poppinsmedium"
                    android:textAlignment="textStart"
                    android:textSize="@dimen/sp15"
                    tools:ignore="RtlCompat" />-->


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight=".8"
                    android:gravity="top"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:id="@+id/tv_reason"
                    android:fontFamily="@font/poppinsmedium"
                    android:text="Power Shut Down due to maintenance in Sub Station System"
                    android:textAlignment="viewStart"
                    android:textColor="@color/snackbar_color"
                    android:textSize="@dimen/sp15"
                    tools:ignore="RtlCompat" />

            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>
</LinearLayout>